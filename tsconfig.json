{
  "compilerOptions": {
    "outDir": "./dist/@supersonic-micro-app-seed",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/@supersonic-micro-app-seed"
  },
  "exclude": [
    "node_modules",
    "app",
    "web",
    "dist",
    "stories",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
